<% flash.each do |name, msg| %>
  <% if name == "alert" %>
    <%= content_tag(:div, msg, class: "alert alert-warning mt-4", role: "alert") %>
  <% else %>
    <%= content_tag(:div, msg, class: "alert alert-info mt-4", role: "alert") %>
  <% end %>
  <%#= "The msg is: #{msg}" %>
  <%#= "The name is: #{name}" %>
<% end %>